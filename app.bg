<!DOCTYPE html>
<html>
<head>
  <title>BrowsiGO</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      height: 100vh;
      font-family: Arial, sans-serif;
    }

    #search-bar {
      display: flex;
      align-items: center;
      padding: 10px;
      background-color: #333;
      color: white;
    }

    #address-bar {
      flex: 1;
      padding: 5px;
    }

    #go-button {
      padding: 5px 10px;
      background-color: #555;
      color: white;
      border: none;
      cursor: pointer;
    }

    #content {
      flex: 1;
      overflow: hidden;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
    }

    #error-message {
      display: none;
      color: red;
      text-align: center;
      padding: 10px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div id="search-bar">
    <input type="text" id="address-bar" placeholder="Enter URL">
    <button id="go-button">Go</button>
  </div>
  <div id="content"></div>
  <div id="error-message">Invalid URL. Please enter a valid URL.</div>

  <script>
    const addressBar = document.getElementById('address-bar');
    const goButton = document.getElementById('go-button');
    const contentDiv = document.getElementById('content');
    const errorMessage = document.getElementById('error-message');

    goButton.addEventListener('click', () => {
      const url = addressBar.value;
      if (isValidUrl(url)) {
        errorMessage.style.display = 'none';
        contentDiv.innerHTML = `<iframe src="${url}" style="width: 100%; height: 100%; border: none;"></iframe>`;
      } else {
        errorMessage.style.display = 'block';
        contentDiv.innerHTML = ''; // Clear content if URL is invalid
      }
    });

    // Helper function to check if URL is valid
    function isValidUrl(url) {
      try {
        new URL(url);
        return true;
      } catch (error) {
        return false;
      }
    }

    // Set homepage to example.com
    addressBar.value = 'https://www.example.com';
    goButton.click(); // Load example.com on startup
  </script>
</body>
</html>
