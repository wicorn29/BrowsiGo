<!DOCTYPE html>
<html>
<head>
  <title>BrowsiGo</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      height: 100vh;
      font-family: Arial, sans-serif;
    }

    #welcome-message {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-color: #f0f0f2;
      padding: 30px;
      text-align: center;
    }

    #no-internet-message {
      display: none;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.8);
      color: white;
      text-align: center;
      padding-top: 50vh;
      z-index: 9999;
    }

    #search-bar {
      display: flex;
      align-items: center;
      padding: 10px;
      background-color: #333;
      color: white;
    }

    #address-bar {
      flex: 1;
      padding: 5px;
    }

    #go-button {
      padding: 5px 10px;
      background-color: #555;
      color: white;
      border: none;
      cursor: pointer;
    }

    #content {
      flex: 1;
      overflow: hidden;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
    }
  </style>
</head>
<body>
  <div id="welcome-message">
    <h2>Welcome to BrowsiGo!</h2>
    <p>This is a simple Electron browser application. Enter a URL above and click "Go" to start browsing.</p>
  </div>

  <div id="no-internet-message">
    <p>No Internet Connection</p>
  </div>

  <div id="search-bar">
    <input type="text" id="address-bar" placeholder="Enter URL">
    <button id="go-button">Go</button>
  </div>

  <div id="content"></div>

<script>
  const addressBar = document.getElementById('address-bar');
  const goButton = document.getElementById('go-button');
  const contentDiv = document.getElementById('content');
  const welcomeMessage = document.getElementById('welcome-message');
  const noInternetMessage = document.getElementById('no-internet-message');

  let internetCheckInterval;
  let currentIframeUrl = '';

  goButton.addEventListener('click', () => {
    clearInterval(internetCheckInterval);

    const url = addressBar.value;
    if (isValidUrl(url)) {
      noInternetMessage.style.display = 'none';
      welcomeMessage.style.display = 'none';
      contentDiv.innerHTML = `<iframe src="${url}" style="width: 100%; height: 100%; border: none;"></iframe>`;
      currentIframeUrl = url;
      updatePageTitle(url);
    } else {
      noInternetMessage.style.display = 'none';
      welcomeMessage.style.display = 'none';
      contentDiv.innerHTML = ''; // Clear content if URL is invalid
      currentIframeUrl = '';
      updatePageTitle('');
    }
  });

  // Helper function to check if URL is valid
  function isValidUrl(url) {
    try {
      new URL(url);
      return true;
    } catch (error) {
      return false;
    }
  }

  // Function to check internet connectivity
  function checkInternetConnection() {
    const online = navigator.onLine;
    if (!online) {
      noInternetMessage.style.display = 'block';
    } else {
      noInternetMessage.style.display = 'none';
    }
  }

  // Function to update the main page's title
  function updatePageTitle(iframeUrl) {
    if (!iframeUrl) {
      document.title = 'BrowsiGo';
      return;
    }

    const iframe = document.createElement('iframe');
    iframe.src = iframeUrl;
    iframe.style.display = 'none';
    
    iframe.onload = function () {
      const iframeTitle = iframe.contentDocument.querySelector('title');
      if (iframeTitle) {
        document.title = `BrowsiGo: ${iframeTitle.textContent}`;
      } else {
        document.title = 'BrowsiGo';
      }
      
      iframe.remove();
    };
    
    document.body.appendChild(iframe);
  }

  // Check for internet connection every 1 second
  internetCheckInterval = setInterval(checkInternetConnection, 1000);

  // Initial check when the page loads
  checkInternetConnection();
</script>

</body>
</html>
